int array_to_int(int[] array) {
    if (array.length > 0) {
        return array[0];
    }
    return 0;
}

int count_array(int[] array) {
    double_array(array);

    int sum = 0;
    int i;
    for (i = 0; i < array.length; i++) {
        sum = sum + array[i+1.0];
    }

    if (sum) {
        return array_to_int(array);
    }

    sum = 1 + 2;
    if (sum > 0) {
        return sum;
    }
    else if (sum < 0) {
        return 0;
    }
    return 100;
    //return 100;
}

void double_array(int[] array) {
    int i;
    for (i = 0; i < array.length; i++) {
        array[i] = 2 * array[i];
        if (i > 2) {
            return;
        }
    }
}

