void recurse(bar b) {
    int i;
    for (i = 0; i < b.children.length; i++) {
        recurse((b.children)[i]);
    }
}

int recur1(int a) {
    if (a > 0) {
        return recur2(a - 1);
    }
    return 0;
}

int recur2(int b) {
    float a = b - 2;
    if (b > 0) return recur2(b - 1);
    else if (b > 0) return recur1(b - a);
    return 0;
}

