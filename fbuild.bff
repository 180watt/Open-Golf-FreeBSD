.OSXCompiler = '/usr/bin/clang'
.OSXCompilerOptions = '%1 -o %2 -c -Isrc -Ilibs -Wall -Wno-unused-function -Wno-unused-variable -g -DSOKOL_GLCORE33 -DHOLE_EDITOR -DHOTLOADER_ACTIVE'

ObjectList('core-osx-debug')
{
    .Compiler = '$OSXCompiler$'
    .CompilerInputPath = { 'src/' }
    .CompilerInputPattern = '*.c'
    .CompilerOutputPath = 'out/osx-debug/core/'
    .CompilerOptions = '-x objective-c ' + 
                    '$OSXCompilerOptions$ '
}

ObjectList('cpp-libs-osx-debug')
{
    .Compiler = '$OSXCompiler$'
    .CompilerInputPath = 'libs/'
    .CompilerOutputPath = 'out/osx-debug/cpp-libs/'
    .CompilerInputPattern = '*.cpp'
    .CompilerOptions = '$OSXCompilerOptions$ ' +
                    '-std=c++11'
}

ObjectList('c-libs-osx-debug')
{
    .Compiler = '/usr/bin/clang'
    .CompilerInputPath = 'libs/'
    .CompilerOutputPath = 'out/osx-debug/c-libs/'
    .CompilerInputPattern = '*.c'
    .CompilerOptions = '-x objective-c ' +
                    '$OSXCompilerOptions$ '
}

Executable('minigolf-osx-debug') 
{
    .Linker = '/usr/bin/clang'
    .LinkerOutput = 'out/osx-debug/minigolf'
    .LinkerOptions = '-o %2 %1 -lm -lpthread -lstdc++ -framework Cocoa -framework CoreServices -framework OpenGL -framework AudioToolbox -g'
    .Libraries = { 'core-osx-debug', 'cpp-libs-osx-debug', 'c-libs-osx-debug' }
}

